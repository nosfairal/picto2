{% extends 'base.html.twig' %}

{% block title %}Réinitialisation mot de passe
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/test.css') }}" type="text/css">
{% endblock %}
{% block body %}
	<div class="text-center mt-4">
		<a id="logo" class="px-3" href="{{ path('home') }}"><img src="{{ asset('img/LogoEcam.png') }}" alt="Ecam">
		</a>
	</div>

	<main id="homeWrapper" class="container rounded my-4 py-4 px-5">

		{% for flashError in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flashError }}</div>
		{% endfor %}
		<h4 class="text-center py-3">Réinitialiser votre mot de passe</h4>
		<div class="text-center py-4">
			Merci d'entrer votre adresse email.<br/>
			Nous vous enverrons un lien pour la réinitialisation.
		</div>
		<div class="text-center md-6">
			{{ form_start(requestForm) }}
			{{ form_row(requestForm.email) }}
		</div>

		<div class="text-center py-4">
			<button class="btn resetPassword">Envoyer</button>
		</div>

		{{ form_end(requestForm) }}
	</main>

{% endblock %}
